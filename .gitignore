@'
# env & IDE
.venv/
env/
*.pyc
__pycache__/
.vscode/
.idea/

# datasets
/data/
/data_raw/
/data/processed/

# runs: ignore all by default
/runs/*

# keep logs (csv/png) for every run
!/runs/logs/**
# keep per-run metadata (but still ignore weights)
!/runs/lora/**/run_meta.json

# still ignore all weights/artifacts by default
/runs/lora/**/weights/**
'@ | Out-File -Encoding UTF8 .gitignore
